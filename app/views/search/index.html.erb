<h1 class='text-center'><%= pluralize(@posts.count, "Result") %></h1>

<div class="container">
    <table class="table table-light table-striped">
        <thead>
            <tr>
                <th><%= sort_link(@query, :title, "Title", default_order: :asc, class:'text-decoration-none text-dark') %></th>
                <th><%= sort_link(@query, :content, "Blog Content", class:'text-decoration-none text-dark') %></th>
                <th><%= sort_link(@query, :user_name, "Users", class:'text-decoration-none text-dark') %></th>
            </tr>
        </thead>

        <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td><%= link_to post.title, post, class:"text-decoration-none" %></td>
                    <td><%= link_to post.content.truncate_words(25), post, class:"text-decoration-none" %></td>
                    <td><%= link_to post.user.name, post.user, class:"text-decoration-none" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

