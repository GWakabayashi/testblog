<% if user_signed_in? %>
  <div class=" container px-4 py-5 my-5 text-center">
    <div class="d-none d-lg-block">
      <br><br><br><br>
    </div>
    <h1 class="display-5 fw-bold">Hey <%= current_user.name %>! Time to discover the blog!</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <!-- <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Primary button</button>
        <button type="button" class="btn btn-outline-secondary btn-lg px-4">Secondary</button> -->
        <%= link_to 'Start Exploring', posts_path, class:"btn btn-dark btn-lg px-4 gap-3" %>
      </div>
    </div>
  </div> 
<% else %>
  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 mb-3">Welcome to Test Blog, another rails blog.</h1>
        <p class="col-lg-10 fs-4">Below is an example form built entirely with Bootstrap’s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
        <div class="p-4 p-md-5 border rounded-3 bg-light">
          <%= form_for(:user, :url => session_path(:user)) do |f| %>
            <form>
              

                <div class="form-floating mb-3">
                  <% f.email_field :email, autofocus: true, class:"form-control", id:"floatingInput", placeholder:"name@example.com" %>
                  <%= f.text_field :email, class:"form-control", id:"floatingInput", placeholder:"name@example.com" %>
                  <label for="floatingInput">Email address</label>
                </div>

                <div class="form-floating mb-3">
                  <% f.password_field :password, autocomplete: "current-password", class:"form-control", id:"floatingPassword", placeholder:"Password" %>
                  <%= f.password_field :password, class:"form-control", id:"floatingPassword", placeholder:"Password" %>
                  <label for="floatingPassword">Password</label>
                </div>

                <div class="checkbox mb-3">
                  <!-- <label>
                    <input type="checkbox" value="remember-me"> Remember me
                  </label> -->
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>

               
                <%= f.submit "Sign in", class:'w-100 btn btn-lg btn-primary' %>
                
                <%= link_to "Forgot your password?", new_password_path(:user), class:'text-decoration-none' %>
                <hr class="my-4">
                <small class="text-muted">Not yet a member? <%= link_to 'Sign Up', new_user_registration_path, class:'text-decoration-none' %>.</small> 
              
            </form>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <img src="assets/image2" class='mx-5' width=20%>
  </div>
<% end %>


