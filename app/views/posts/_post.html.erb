<div id="<%= dom_id post %>">
  
  <h2><%= post.title %></h2>
  <h5>posted by: <%= link_to post.user.name, user_path(post.user), class:'text-decoration-none' %></h5>
  <h6><%= pluralize(post.views, 'view') %></h6>

  <div>
    <%= simple_format truncate(post.content, :length => 200) %>
  </div>

</div>
